# ===========================================
# TELEGRAM LIVE STREAMING - CONFIGURATION
# ===========================================

# Telegram API Configuration
# Get your API credentials from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=+1234567890

# YouTube API Configuration
# Get your API key from https://console.developers.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here

# Database Configuration
# MySQL database settings for your hosting
DB_HOST=localhost
DB_NAME=telegram_live
DB_USER=your_db_username
DB_PASS=your_db_password

# Session Storage (Do not change these paths)
SESSION_PATH=public/sessions/
UPLOAD_PATH=uploads/

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security (For production environments)
# Set to 'production' when deploying to hosting
APP_ENV=development

# Time Zone
APP_TIMEZONE=Asia/Tashkent
